# Application Configuration
NODE_ENV=development
APP_PORT=3000

# Paths
DEFAULT_DOWNLOAD_PATH=~/Downloads/PreVideo
TEMP_PATH=/tmp/prevideo

# External Tools Paths (will be auto-detected if not set)
YTDLP_PATH=
FFMPEG_PATH=
WHISPER_PATH=

# API Keys (optional)
# If not provided, will use local models
OPENAI_API_KEY=
DEEPL_API_KEY=

# Proxy Settings (optional)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# Performance Settings
MAX_CONCURRENT_DOWNLOADS=3
MAX_DOWNLOAD_SPEED_MBPS=0
WHISPER_MODEL=base
FFMPEG_THREADS=0

# Feature Flags
ENABLE_AUTO_UPDATE=true
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTS=true
ENABLE_HARDWARE_ACCELERATION=true

# Development
DEBUG=false
LOG_LEVEL=info
DEVTOOLS=false

# Build Configuration
CSC_LINK=
CSC_KEY_PASSWORD=
APPLE_ID=
APPLE_ID_PASSWORD=
GH_TOKEN=