{
  "appId": "com.prevideo.app",
  "productName": "PreVideo",
  "copyright": "Copyright Â© 2024 PreVideo Team",
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "bin",
      "to": "bin",
      "filter": ["**/*"]
    },
    {
      "from": "models",
      "to": "models",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "category": "public.app-category.video",
    "icon": "build/icons/icon.icns",
    "hardenedRuntime": true,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "gatekeeperAssess": false,
    "notarize": {
      "teamId": "${APPLE_TEAM_ID}"
    },
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "title": "PreVideo ${version}",
    "icon": "build/icons/icon.icns",
    "background": "build/background.png",
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "win": {
    "icon": "build/icons/icon.ico",
    "publisherName": "PreVideo Team",
    "certificateFile": "${WIN_CERT_FILE}",
    "certificatePassword": "${WIN_CERT_PASSWORD}",
    "verifyUpdateCodeSignature": true,
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "build/icons/icon.ico",
    "uninstallerIcon": "build/icons/icon.ico",
    "installerHeaderIcon": "build/icons/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "PreVideo",
    "license": "LICENSE",
    "include": "build/installer.nsh",
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "linux": {
    "icon": "build/icons",
    "category": "Video",
    "synopsis": "Video downloader with subtitle support",
    "description": "A powerful video downloader with bilingual subtitle generation and video compression",
    "desktop": {
      "Name": "PreVideo",
      "Comment": "Video downloader with subtitle support",
      "Categories": "AudioVideo;Video;",
      "Keywords": "video;download;subtitle;youtube;"
    },
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      }
    ]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "prevideo-team",
      "repo": "prevideo",
      "releaseType": "release"
    }
  ],
  "afterSign": "build/scripts/notarize.js"
}